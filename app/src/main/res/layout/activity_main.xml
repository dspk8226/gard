<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardian Keyboard Settings"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configure your guardian settings below"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="24dp" />

        <!-- Guardian Phone Number -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardian Phone Number:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/guardianNumberInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter phone number (e.g., +1234567890)"
            android:inputType="phone"
            android:layout_marginBottom="16dp"
            android:padding="12dp" />

        <!-- Threshold -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Safety Threshold:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/thresholdInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Default: 5"
            android:inputType="number"
            android:layout_marginBottom="16dp"
            android:padding="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alert triggers when score reaches this threshold"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="24dp" />

        <!-- PIN -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PIN (Optional):"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/pinInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter PIN to dismiss blocking overlay"
            android:inputType="numberPassword"
            android:layout_marginBottom="16dp"
            android:padding="12dp" />

        <!-- NBOW Editor -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Negative Bag-of-Words (JSON):"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/nbowEditText"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="Edit NBOW JSON here"
            android:inputType="textMultiLine"
            android:gravity="top|start"
            android:fontFamily="monospace"
            android:textSize="12sp"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:scrollbars="vertical" />

        <!-- Buttons -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Configuration"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:padding="16dp" />

        <Button
            android:id="@+id/enableKeyboardButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open Keyboard Settings"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:padding="16dp" />

        <Button
            android:id="@+id/switchKeyboardButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Switch to Guardian Keyboard Now"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/testButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Blocking Activity"
            android:textSize="16sp"
            android:padding="16dp"
            android:backgroundTint="#FF0000" />

    </LinearLayout>

</ScrollView>

